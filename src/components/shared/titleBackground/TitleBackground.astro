---
interface Props {
	title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<section class="background center">
    <div class="container center text_container">
        <div class="">
            <div class="text">
                <h1>{title}</h1>
                <p>{description}</p>
            </div>
    </div>
    </div>
</section>


<style>
    .background{
    width: 100vw;
    margin-bottom: 2.5rem;
    background-repeat: no-repeat;
    background-image: url("https://media.post.rvohealth.io/wp-content/uploads/2022/09/Migraine-Hub-mobile-1000x400-1.jpg");
    background-size: cover;
    min-height: 20rem;
   
    margin-left: calc((100vw - 100%) / -2);
	margin-right: calc((100vw - 100%) / -2);
    }
    .background .text_container{
        height: 100%;
        
    }
    .background .text{
        color: white;
        z-index: 1;
        position: relative;
        text-align: center;
    }
    .background .text h1{
        font-family: "Metropolis-700",sans-serif;
    font-weight: 700;
    font-size: 3.8rem;
    line-height: 4.2rem;
    margin-bottom: 1rem;
    }
    .background .text p{
        font-size: 2.2rem;
        line-height:3rem;
        display: none;
    }
    @media screen and (min-width: 990px){
        .background{
            margin-top: -2.2rem;
    background-image: url("https://media.post.rvohealth.io/wp-content/uploads/2022/09/Migraine-Hub-desktop-3600x600-1-scaled.jpg");
    }
    .background .text{
        text-align: center;
    }
    .background .text p{
        font-size: 2.2rem;
        line-height:3rem;
        display: block;
    }
    }
    @media screen and (min-width: 1100px){
        .background{
            margin-top: -4.2rem;
    }
    }
</style>